<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:id="@+id/profileactivity_ImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/images"
            />

        <LinearLayout
            android:layout_below="@+id/profileactivity_ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/profileactivity_Fname"
                    style="@style/edittext_style"
                    android:hint="First Name"
                    android:layout_weight="0.6"/>
                <EditText
                    android:id="@+id/profileactivity_LName"
                    android:hint="Last Name"
                    style="@style/edittext_style"
                    android:layout_weight="0.4"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15dp"

                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/profileactivity_Email"
                android:layout_width="match_parent"
                style="@style/edittext_style"
                android:inputType="textEmailAddress"
                android:hint="Email"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/profileactivity_mobileNO"
                android:layout_width="match_parent"
                style="@style/edittext_style"
                android:inputType="number"
                android:hint="Mobile Number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LandLine Number"
                android:textSize="15sp"

                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/profileactivity_LandLineNO"
                android:layout_width="match_parent"
                android:inputType="number"
                style="@style/edittext_style"
                android:hint="Landline Number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/profileactivity_house"
                   style="@style/edittext_style"
                    android:hint="House No"
                    android:layout_weight="0.5"/>
                <EditText
                    android:id="@+id/profileactivity_StreetAd"
                    android:hint="Street address"
                   style="@style/edittext_style"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/profileactivity_pincode"
                    style="@style/edittext_style"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:layout_weight="0.5"/>

                <EditText
                    android:id="@+id/profileactivity_State"
                    style="@style/edittext_style"
                    android:hint="State"
                    android:layout_weight="0.5"/>
                <EditText
                    android:id="@+id/profileactivity_Country"
                    android:hint="Country"
                    style="@style/edittext_style"
                    android:layout_weight="0.5"/>
                <ProgressBar
                    android:id="@+id/profileactivity_ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field1"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/profileactivity_Field1"
                android:layout_width="match_parent"
                style="@style/edittext_style"
                android:hint="Field 1[Alphanumeric]"
                android:digits="@string/Field1"
                />

            <Button
                android:id="@+id/profileactivity_SaveButton"
                style="@style/profilebutton_style"
                android:text="Save"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>