<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="edittext_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColorHint">#B0BEC5</item>
        <item name="android:textColor">#90A4AE</item>


    </style>
    <style name="button_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="popupotp">
         <item name="android:background">@drawable/popupotp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
         <item name="android:textSize">20sp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
     <item name="android:layout_margin">5dp</item>
    </style>
    <style name="profilebutton_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/profilebutton_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
